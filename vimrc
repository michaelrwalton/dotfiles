syntax on
set number
set encoding=utf8
colorscheme desert
set background=dark
set ruler
set wildignore=*.o,*~,*.pyc

" =Tabs= "

" Expand tabs to spaces"
set expandtab 
set shiftwidth=4
set softtabstop=4
set tabstop=4
set autoindent
set smartindent

" netrw settings "
let g:netrw_browse_split = 4
let g:netrw_altv = 1
let g:netrw_preview = 1
let g:netrw_winsize = 230
