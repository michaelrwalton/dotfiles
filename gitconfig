[user]
	name = Michael Walton
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
[alias]
	lg = log --graph --decorate --pretty=format:'%Cred%h%C(reset) - %Cblue%cn%Cblue (%cr)%n%Cgreen %s%n'
	dif = diff --color
[include]
    path = ~/.gitconfig.local
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = simple
